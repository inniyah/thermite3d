<?xml version="1.0" standalone="yes"?>
<scene formatVersion="2.0">
	<environment>
		<colourAmbient r="0.3" g="0.3" b="0.3" />
		<skyBox material="SkyBox" distance="100.0" drawFirst="true">
			<rotation qw="0" qx="0" qy="1" qz="0"/>
		</skyBox>
	</environment>
	<nodes>
		<node name="CameraNode">			
			<camera name="Camera" fov="1.0">
			<clipping near="1.0" far="1000" />
				<position x="128" y="128" z="256" />
				<lookTarget>
					<position x="128" y="0" z="128" />
				</lookTarget>
			</camera>
		</node>
		<light name="Sun" type="directional">
			<normal x="-1" y="-1" z="-1" />
		</light>
		<node name="RobotNode">
			<scale x="0.3" y="0.3" z="0.3" />
			<position x="128" y="100" z="128" />			
			<entity meshFile="robot.mesh" name="RobotMesh" castShadows="True"/>
		</node>
		<node name="JaiquaNode">
			<scale x="2.0" y="2.0" z="2.0" />
			<position x="200" y="100" z="200" />			
			<entity meshFile="jaiqua.mesh" name="JaiquaMesh" castShadows="True"/>
		</node>
		<node name="OgreHeadNode">
			<scale x="0.2" y="0.2" z="0.2" />
			<position x="100" y="100" z="150" />			
			<entity meshFile="ogrehead.mesh" name="OgreHeadMesh" castShadows="True" collisionShape="exact" mass="1.0"/>
		</node>
	</nodes>
</scene>
